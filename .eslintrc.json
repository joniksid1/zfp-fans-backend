{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-underscore-dangle": [
      "error",
      {
        "allow": [
          "_id"
        ]
      }
    ],
    "import/no-extraneous-dependencies": [
      "error", {
         "devDependencies": false,
         "optionalDependencies": false,
         "peerDependencies": false,
         "packageDir": "./"
      }
  ]
  }
}